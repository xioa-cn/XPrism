<xPrism:XPrismWindow x:Class="XPrism.Demo.Views.SubWindow"
                     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                     xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                     xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                     xmlns:local="clr-namespace:XPrism.Demo.Views"
                     xmlns:vm="clr-namespace:XPrism.Demo.ViewModels" 
                     xmlns:xPrism="clr-namespace:XPrism.Core.DataContextWindow;assembly=XPrism.Core"
                     mc:Ignorable="d"
                     Title="SubWindow" Height="450" Width="800">
    <StackPanel>
        <TextBlock Width="200" Height="50" Margin="10" Text="{Binding Username}"></TextBlock>
        <Button Width="200" Height="50" Margin="10" Command="{Binding Unsubscribe1Command}">token noFilter</Button>
        <Button Width="200" Height="50" Margin="10" Command="{Binding Unsubscribe2Command}">token filter</Button>
        <Button Width="200" Height="50" Margin="10" Command="{Binding Unsubscribe3Command}">noToken noFilter</Button>
        <Button Width="200" Height="50" Margin="10" Command="{Binding Unsubscribe4Command}">noToken filter</Button>
    </StackPanel>
</xPrism:XPrismWindow>