<xPrism:XPrismWindow x:Class="HomeModules.Views.HomeModulesHomeWindow"
                     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                     xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                     xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                     xmlns:local="clr-namespace:HomeModules.Views"
                     xmlns:xPrism="clr-namespace:XPrism.Core.DataContextWindow;assembly=XPrism.Core"
                     xmlns:vm="clr-namespace:HomeModules.ViewModel"
                     d:DataContext="{d:DesignInstance Type=vm:HomeViewModel}"
                     mc:Ignorable="d"
                     Title="HomeModulesHomeWindow" Height="450" Width="800">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Width" Value="200" />
            <Setter Property="Margin" Value="10" />
            <Setter Property="Height" Value="30"></Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <Button Command="{Binding ShowDialogCommand}"> Show Dialog</Button>
    </Grid>
</xPrism:XPrismWindow>